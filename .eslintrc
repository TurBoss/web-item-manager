{
  "parser": "babel-eslint",
  "extends": [
    "airbnb"
  ],
  "parserOptions": {
    "ecmaVersion": 6,
    "sourceType": "module",
    "ecmaFeatures": {
      "jsx": true
    }
  },
  "env": {
    "es6": true,
    "browser": true,
    "jest":true,
    "mocha": true,
    "node": true
  },
  "plugins": [
    "react"
  ],
  "rules": {
    "comma-dangle": ["error", { "functions": "ignore" }],
    "no-unused-vars": ["error", { "argsIgnorePattern": "next" }],
    "space-before-function-paren": ["error", { "anonymous": "never", "named": "never" }],
    "func-names": ["warn", "never"],
    "prefer-arrow-callback": ["off"]
  }
}
